<ol class="breadcrump list-inline">
    <li class="breadcrump-item"><a href="/articles/list">Articles</a> </li>
    <li class="breadcrump-item active">Edit</li>
</ol>
<h1 class="display-4">Edit Article</h1>
<form method="post" action="/articles/update/<%= article.id %>">
    <div class="form-group mb-4">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" value="<%= article.title %>">
    </div>
    <div class="form-group mb-4">
        <label for="body">Body</label>
        <textarea name="body" class="form-control"><%= article.body %></textarea>
    </div>
    <input type="submit" value="submit" class="btn btn-primary">
</form>
